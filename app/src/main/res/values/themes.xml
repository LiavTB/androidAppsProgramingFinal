<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Theme.Travelog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Activity Background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.Travelog.Button.Filled</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Travelog.Button.Outlined</item>

        <!-- Text Input Styles -->
        <item name="textInputStyle">@style/Widget.Travelog.TextInputLayout</item>
    </style>

    <!-- Filled Button (Login) -->
    <style name="Widget.Travelog.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/vibrant_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Outlined Button (Sign Up) -->
    <style name="Widget.Travelog.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/vibrant_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/vibrant_green</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.Travelog.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/vibrant_green</item>
        <item name="android:textColorHint">@color/medium_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>
</resources>